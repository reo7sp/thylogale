<div class="page-topbar">
  <h1 class="page-topbar__title" id="page-topbar-title">
    <%= @page.title %>
  </h1>

  <%= link_to "#{glyphicon 'arrow-up'} #{t :go_up}".html_safe, @page.root_folder,
              class: 'page-topbar__back-btn'
  %>

  <div class="page-topbar__actions page-actions">
    <div class="page-topbar__status page-status" id="page-status">
    </div>

    <div class="page-actions__item btn-group">
      <button class="btn btn-default dropdown-toggle" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
        <span class="caret"></span>
      </button>
      <ul class="dropdown-menu">
        <li>
          <%= link_to t(:preview), preview_page_path(@page), target: '_blank' %>
        </li>
        <li>
          <%= link_to t(:open_on_site), site_page_path(@page), target: '_blank' %>
        </li>
        <li>
          <%= link_to t(:show_raw), raw_page_path(@page), target: '_blank' %>
        </li>
      </ul>
    </div>

    <div class="page-actions__item btn-group" role="group" aria-label="...">
      <button class="btn btn-success publish-button <%= 'publish-button__hidden' unless @page.edited %>" id="publish-page-button" data-page="<%= @page.id %>">
        <%= glyphicon 'share' %> <%=t :publish %>
      </button>
      <button class="btn btn-success publish-button <%= 'publish-button__hidden' unless @page.edited and Page.edited.count >= 2 %>" id="publish-all-pages-suffix-button">
        <%=t :publish_all_suffix %>
      </button>
    </div>
    <button class="page-actions__item btn btn-success publish-button <%= 'publish-button__hidden' unless @page.published and Page.edited.any? %>" id="publish-all-pages-button">
      <%= glyphicon 'share' %> <%= glyphicon 'asterisk' %> <%=t :publish_all %>
    </button>
  </div>
</div>
