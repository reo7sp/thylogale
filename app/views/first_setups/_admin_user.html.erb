<h4><%=t :admin_user %></h4>

<%= fields_for 'admin_user' do |f| %>
    <div class="first-setup-window__choice">
      <div class="form-horizontal" id="first_setup_save_choice_s3_details">
        <div class="form-group">
          <label class="control-label col-sm-3"><%=t :user %></label>
          <div class="col-sm-9">
            <p class="form-control-static">admin</p>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password, t(:password), class: 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <%= f.password_field :password, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :password_confirmation, t(:password_confirmation), class: 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <%= f.password_field :password_confirmation, class: 'form-control' %>
          </div>
        </div>
        <div class="form-group">
          <%= f.label :email, t(:recovery_email), class: 'control-label col-sm-3' %>
          <div class="col-sm-9">
            <%= f.text_field :email, class: 'form-control' %>
          </div>
        </div>
      </div>
    </div>
<% end %>

